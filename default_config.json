{
    "assistant": {
        "name": "Assistant"
    },
    "server": {
        "websocket": {
            "host": "localhost",
            "port": 8765,
            "api_key": "your_secure_key_here"
        },
        "gpu_device": "auto",
        "models": {
            "whisper": {
                "path": "models/whisper-large-v3-turbo"
            },
            "kokoro": {
                "path": "models/Kokoro-82M",
                "voice_name": "bf_emma"
            }
        }
    },
    "llm": {
        "server": "localhost",
        "port": 8000,
        "model_name": "your_model_name",
        "api_base": "http://localhost:8000/v1",
        "api_key": "your_api_key_here",
        "conversation": {
            "context_timeout": 180,
            "max_tokens": 8000,
            "temperature": 0.7,
            "response_max_tokens": 1024
        }
    },
    "audio_processing": {
        "chunk_size": 2048,
        "desired_rate": 16000,
        "time_constants": {
            "peak_attack": 0.001,
            "peak_release": 0.100,
            "rms_attack": 0.030,
            "rms_release": 0.500
        },
        "noise_floor": {
            "initial": -50.0,
            "min": -65.0,
            "max": -20.0
        }
    },
    "speech_detection": {
        "preroll_duration": 0.5,
        "min_speech_duration": 0.5,
        "end_silence_duration": 0.8,
        "thresholds": {
            "open": 20.0,
            "close": 15.0
        },
        "window_size": 150,
        "hold_samples": 15,
        "pre_emphasis": 0.97
    },
    "client": {
        "retry": {
            "max_attempts": 3,
            "delay_seconds": 2
        }
    }
}
